<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_menu">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backgroud_music">
    </LinearLayout>
    <!-- Locate Word of "Background Music" -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="210dp">

        <Button
            android:text="@null"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/PlayButton"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/playbutton"/>

        <Button
            android:text="@null"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/StopButton"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/stopbutton"/>
    </LinearLayout>
    <!-- Locate Play and Stop Button-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/adjust_volume"/>
    </LinearLayout>
    <!-- Locate Word of "Background Music" -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:id="@+id/linearLayout">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/adjust_volume_button"
            android:layout_weight="1" />
    </LinearLayout>
    <!-- Locate Seekbar -->

</RelativeLayout>